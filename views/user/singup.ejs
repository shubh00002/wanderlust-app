<% layout("/layouts/boilerplate.ejs") -%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Singup for Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/singup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Enter username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">valid username.</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Enter email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Enter password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Singup</button>
    </form>
  </div>
</div>
